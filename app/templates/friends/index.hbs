<h1>Friends Index</h1>
{{! This context here is the controller }}
<h2>Total friends: {{model.length}}</h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |friend|}}
      <tr>
        <td>{{friend.id}}</td>
        <td>
          {{#link-to "friends.show" friend}}
            {{friend.firstName}} {{friend.lastName}}
          {{/link-to}}
        </td>
        <td><a href="#" {{action "delete" friend}}>Delete</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
