<td>{{article.description}}</td>
<td>{{article.notes}}</td>
<td>{{article.cretedAt}}</td>
<td>{{view "select" content=articleStates selection=article.state}}</td>
<td>
  {{#if article.isSaving}}
    <p>Saving ...</p>
  {{else if article.hasDirtyAttributes}}
    <button {{action "saveArticle" article}}>Save</button>
  {{/if}}
</td>
